<?xml version="1.0" encoding="utf-8"?>
<movie.test.movies.presentor.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/first_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:weightSum="5">

        <ImageView
            android:id="@+id/iv_Poster"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            android:src="@mipmap/loading"
            android:contentDescription="@string/processing"
            android:layout_height="match_parent"
            android:layout_weight="2" />


        <include
            layout="@layout/row_layout_info"
            android:layout_width="0dp"
            android:layout_height= "wrap_content"
            android:layout_weight="3" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/first_layout" />


</movie.test.movies.presentor.SquareLayout>